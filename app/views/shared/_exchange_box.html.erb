<div class='exchange-box col-sm-12 px-4'>
  <div class='card'>

    <div class='card-header text-center'>
      <h5 class='font-weight-bold m-0'>Convers√£o</h5>
    </div>

    <div class='card-block text-center'>
      <%= form_tag('/convert', method: :get, id: 'exchange_form') do %>
        <div class='form-group'>
          <input type='text' name='amount' id='amount' class='form-control' placeholder='Quantidade ($10)' required>
        </div>

        <div class='form-group'>
          <h6 class='title'>Moeda Local</h6>
          <%= select_tag 'source_currency', options_for_select(currency_list, 'BRL'), class: 'form-control', id: 'source_currency' %>
        </div>

         <div class='col-md-12 mt-3 mb-2'>
           <span class='btn-invert-currency' title='Inverter Moeda'><%= icon('fas','sync-alt') %></span>
         </div>

        <div class='form-group'>
          <p class='title'>Moeda Desejada</p>
          <%= select_tag 'target_currency', options_for_select(currency_list, 'EUR'), class: 'form-control', id: 'target_currency'%>
        </div>

        <div class='dv-result' id='result' name='result'>Resultado ...</div>
      <% end %>
    </div>

  </div>
</div>

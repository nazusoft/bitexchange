<div class='exchange-box col-sm-12 px-4'>
  <div class='card'>

    <div class='card-header text-center'>
      <h6 class='font-weight-bold m-0'>CONVERS√ÉO DE MOEDA</h6>
    </div>

    <div class='card-block text-center'>
      <%= form_tag('/convert', method: :get, id: 'exchange_form') do %>
        <div class='row no-gutters'>
          <div class='col-12'>
            <div class='form-group'>
              <h6 class='title bg-light m-0 py-2'>Moeda Local</h6>
              <%= select_tag 'source_currency', options_for_select(currency_list, 'BRL'), class: 'form-control', id: 'source_currency' %>
            </div>
          </div>

          <div class='col-12 mt-3'>
            <div class='row no-gutters'>
              <div class='col-10 pr-2'>
                <div class='form-group'>
                  <input type='text' name='amount' id='amount' class='form-control' placeholder='Quantidade ($10)' required>
                </div>
              </div>

              <div class='col-2 pt-2 btn-invert-currency' title='Inverter Moeda'>
                <%= icon('fas','sync-alt') %>
              </div>
            </div>
          </div>

          <div class='col-12 mt-3'>
            <div class='form-group'>
              <h6 class='title bg-light m-0 py-2'>Moeda Desejada</h6>
              <%= select_tag 'target_currency', options_for_select(currency_list, 'EUR'), class: 'form-control', id: 'target_currency'%>
            </div>
          </div>
        </div>

        <div class='col-12 p-0 mt-2'>
          <div class='form-group'>
            <h6 class='title bg-light m-0 py-2' id='money_result_title'></h6>
            <div class='dv-result' id='money_result' name='money_result'>Resultado ...</div>
          </div>
        </div>

        <div class='row no-gutters'>
        <div class='col-6 pr-1 mt-2'>
          <div class='form-group'>
            <h6 class='title bg-light m-0 py-2'><span id='to_bitcoin_result_title'></span> -> BTC</h6>
            <div class='dv-result' id='to_bitcoin_result' name='to_bitcoin_result'>Resultado ...</div>
          </div>
        </div>

        <div class='col-6 pl-1 mt-2'>
          <div class='form-group'>
            <h6 class='title bg-light m-0 py-2'>BTC -> <span id='from_bitcoin_result_title'></span></h6>
            <div class='dv-result' id='from_bitcoin_result' name='from_bitcoin_result'>Resultado ...</div>
          </div>
        </div>
        </div>

      <% end %>
    </div>

  </div>
</div>
